@model StudentInformation.Models.Student

<div class="d-flex align-items-center justify-content-center" style="min-height: 100vh;">
    <div class="col-md-6">
        <div class="card shadow-sm border-danger">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0">Confirm Deletion</h4>
            </div>
            <div class="card-body">
                <p class="fs-5">
                    Are you sure you want to delete the student <strong>@Model.FullName</strong>?
                </p>

                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="StudentID" />

                    <div class="d-flex justify-content-between mt-4">
                        <button type="submit" class="btn btn-danger">Delete</button>
                        <a asp-action="Index" asp-controller="Student" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
